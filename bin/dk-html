#!/usr/bin/env node
var program = require('commander');

program
  // .option('-h, --html', 'parse html')
  .option('-d, --debug', 'press with debug modal')
  .option('-t, --task <task>', 'excute task')
  .option('-p, --tpl', 'excute task with tpl')
  .parse(process.argv);

// args
var tasks = [], options = {};

// set debug modal
if(program.debug) {
  options['debug_model'] = !0;
}

// task
if(program.task) {
  tasks.push(program.task);
} else {
  if(program.tpl) {
    tasks.push('html_tpl');
  }else{
    tasks.push('new');
  }
}


console.log('----- run ------');
require('../run.js').run(tasks, options);
console.log('----- done ------');
